<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.aceri5.letsapp.ChooseActivityEdit">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/NameYourActivityET"
        android:layout_marginTop="50dp"
        android:hint="Name Your Activity"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Catagory  "
        android:id="@+id/CatagoryTV"
        android:layout_alignTop="@+id/NameYourActivityET"
        android:layout_marginTop="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/NameYourActivityET" />

    <Button
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="Choose Cateories"
        android:id="@+id/chooseCategory"
        android:layout_alignTop="@+id/NameYourActivityET"
        android:layout_marginTop="85dp"
        android:layout_toRightOf="@+id/CatagoryTV" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Icon  "
        android:layout_alignTop="@+id/CatagoryTV"
        android:id="@+id/tv_icon"
        android:layout_marginTop="103dp"
        android:layout_below="@+id/CatagoryTV"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/next"
        android:layout_marginBottom="37dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/chooseCategory"
        android:layout_alignEnd="@+id/chooseCategory" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACK"
        android:id="@+id/back"
        android:layout_alignBottom="@+id/next"
        android:layout_toRightOf="@+id/tv_icon"
        android:layout_toEndOf="@+id/tv_icon" />

    <Spinner
        android:layout_width="140dp"
        android:layout_height="90dp"
        android:id="@+id/icon_spinner"
        android:spinnerMode="dropdown"
        android:textSize="25sp"
        android:textColor="#324edc"
        android:layout_alignTop="@+id/CatagoryTV"
        android:layout_marginTop="70dp"
        android:layout_toRightOf="@+id/CatagoryTV"
        android:layout_toEndOf="@+id/CatagoryTV" />


</RelativeLayout>
