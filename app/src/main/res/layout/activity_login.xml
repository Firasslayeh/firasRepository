<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.aceri5.letsapp.LoginActivity"
    android:background="#ffffff">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/letsapplogo"
        android:layout_marginTop="17dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/PhoneNumandCode"
        android:layout_marginTop="70dp"
        android:hint="Enter Your Phone Number"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Send verification code  "
        android:id="@+id/VerificationBtn"
        android:background="#324edc"
        android:layout_below="@+id/PhoneNumandCode"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Us"
        android:id="@+id/ContactUs"
        android:layout_marginBottom="24dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/VerificationBtn"
        android:layout_toEndOf="@+id/VerificationBtn"
        android:textColor="#28b3ea" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Send Again  "
        android:id="@+id/SendAgainBtn"
        android:background="#324edc"
        android:textColor="#ffffff"
        android:layout_above="@+id/ContactUs"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="31dp"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Send again if you did not receive a code within 3 minutes"
        android:id="@+id/SendAgainMsg"
        android:textAlignment="center"
        android:layout_above="@+id/SendAgainBtn"
        android:layout_alignLeft="@+id/PhoneNumandCode"
        android:layout_alignStart="@+id/PhoneNumandCode"
        android:layout_alignRight="@+id/PhoneNumandCode"
        android:layout_alignEnd="@+id/PhoneNumandCode" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="set clock"
        android:id="@+id/clk"
        android:layout_below="@+id/imageView"
        android:layout_alignRight="@+id/ContactUs"
        android:layout_alignEnd="@+id/ContactUs" />

</RelativeLayout>
